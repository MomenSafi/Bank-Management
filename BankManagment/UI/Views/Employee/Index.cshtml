@model List<Infrastructure.DTO.EmployeeDTO>

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Add New Employee</h5>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="Col-md-12">
                                <table id="myTable" class="table table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Mobile</th>
                                            <th>Address</th>
                                            <th>Join Date</th>
                                            <th>Salary</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.FullName</td>
                                                <td>@item.Mobile</td>
                                                <td>@item.Address</td>
                                                <td>@item.JoinDate.ToString("dd/MM/yyyy")</td>
                                                <td>@item.Salary</td>
                                                <td></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#myTable').DataTable({
        buttons:
        ['copy','csv','excel','pdf','print']
    });
</script>